
<div id="container">
<div class="w3-container">
<div class="w3-animate-left" id="burgerimage"><img src="/assets/img/burger.jpg"></div>
</div>
<div>
<h1 id="burgertitle">BURGERS!!</h1>
</div>
<hr>

<ul>
    {{#each cats}} {{#unless sleepy}} {{> cats/cat-block sleep=true}} {{/unless}} {{/each}}
</ul>


<ul>
    {{#each cats}} {{#if sleepy}} {{> cats/cat-block sleep=false}} {{/if}} {{/each}}
</ul>

<h2 id="burgersubtitle">Add a Burger son</h2>
<form class="create-form">

    <div class="form-group">
        <label id="labeltext" for="ba">Burger Name:</label>
        <input type="text" id="ba" name="name">
    </div>
</form>

<p id="burgerbutton">
<input type="submit" value="Submit Ya Burger">
</p>
</div>